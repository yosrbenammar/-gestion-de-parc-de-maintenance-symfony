{% trans_default_domain 'FOSUserBundle' %}


<img src="{{ asset('asset/img/placeholders/backgrounds/login_full_bg.jpg') }}" alt="Login Full Background" class="full-bg animation-pulseSlow">
<div id="login-container" class="animation-fadeIn">
    <!-- Login Title -->
    <div class="login-title text-center">
        <h1><i class="fa fa-unlock"></i> <strong> </strong><br><small> Authentification<strong></strong>  <strong></strong></small></h1>
    </div>
    <!-- END Login Title -->

    <!-- Login Block -->
    <div class="block push-bit">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <!-- Login Form -->
        <form action="{{ path("fos_user_security_check") }}" method="post" id="form-login" class="form-horizontal form-bordered form-control-borderless" novalidate="novalidate">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <div class="form-group">
                <div class="col-xs-12">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="gi gi-user"></i></span>
                        <label for="username">{{ 'security.login.username'|trans }}</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="form-control input-lg" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="gi gi-asterisk"></i></span>
                        <label for="password">{{ 'security.login.password'|trans }}</label>
                        <input type="password" id="password" name="_password" required="required" autocomplete="current-password"  class="form-control input-lg"/>
                    </div>
                </div>
            </div>

            <div class="form-group form-actions">
                <div class="col-xs-12">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label  for="remember_me" class="switch switch-primary" data-toggle="tooltip" title="" aria-describedby="tooltip356887">{{ 'security.login.remember_me'|trans }}</label>
                </div>


            <div class="col-xs-12 text-right">
                <button type="submit"  id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-sm btn-primary"><i class="fa fa-angle-right"></i> conncecter</button>
            </div>
                </div>

        </form>



</div></div>