{% block body %}
<div id="invoice">

    <div class="toolbar hidden-print">
        <div class="text-right">
            <button id="printInvoice" class="btn btn-info"><i class="fa fa-print"></i> Imprimer</button>

        </div>
        <hr>
    </div>
    <div class="invoice overflow-auto">
        <div style="min-width: 10px">
            <header>
                <div class="row">
                    <div class="col">
                        <a target="_blank" href="https://lobianijs.com">
                            <img src="{{asset('asset/img/m.png') }}"   height="90px" width="90px" data-holder-rendered="true" />
                        </a>
                    </div>
                    <div class="col company-details">
                        <h2 class="name">
                            <a target="_blank" href="">
                                Service  De Maintenance
                            </a>
                        </h2>

                    </div>
                </div>
            </header>
            <main>
                <div class="row contacts">
                    <div class="col invoice-to">
                        <div class="text-gray-light"><strong>Pour:</strong> </div>
                        <h2 class="to">{{ interventionpreventive.machine.libelle}}</h2>
                        <div class="address">Placeé à :{{ interventionpreventive.machine.emplacement.libelle}}</div>
                        {% if(interventionpreventive.vehicule!=null)%}
                            <div class="email">Moyen de transport : {{ interventionpreventive.vehicule.matricule }} </div>

                        {% endif %}
                        {% if(interventionpreventive.sousTraitant!=null)%}
                            <div class="email">Sous Traitant : {{ interventionpreventive.sousTraitant.nom }} </div>
                        {% else %}

                            <div class="email"> techniciens:
                                {% for t in technicien %}
                                {{  t.nom }},
                            {% endfor %}</div>
                        {% endif %}



                    </div>

                    <div class="col invoice-details">
                        <h1 class="invoice-id">INNTERVENTION PREVENTIVE № :{{ interventionpreventive.id }} </h1>

                        <div class="date"> Date Début Intervention {{ interventionpreventive.dateDebut|date('d/m/Y ')}}</div>
                        <div class="date"> Date Fin  {{interventionpreventive.dateFin|date('d/m/Y ')}}</div>
                    </div>

                </div>
                <h2 class="piece"> Piéces de rechanges utilisées </h2>
                <table border="0" cellspacing="0" cellpadding="0">
                    <thead>
                    <tr>
                        <td>numéro</td>
                        <td class="text-left">PIECE</td>
                        <td class="text-right">QUANTITE</td>

                    </tr>
                    </thead>
                    <tbody>

                    {% for p in ppi %}
                        <tr>
                            <td class="no" width="1%"> {{ loop.index }} </td>
                            <td class="text-left" > {{ p.piece.designation }} </td>
                            <td class="total" width="2%"> {{p.quantite}} </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                    </tbody>
                    <tfoot>
                    </tfoot>
                </table>

                <div class="notices">
                    <div>Singnature</div>
                    <div class="notice">Chef de parc.</div>
                </div>
            </main>
            {% endblock %}
            <footer>
            </footer>
        </div>
        <!--DO NOT DELETE THIS div. IT is responsible for showing footer always at the bottom-->
        <div></div>
    </div>
</div>
