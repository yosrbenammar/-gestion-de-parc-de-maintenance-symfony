{% block body %}
<div id="invoice">

    <div class="toolbar hidden-print">
        <div class="text-right">
            <button id="printInvoice" class="btn btn-info"><i class="fa fa-print"></i> Imprimer</button>

        </div>
        <hr>
    </div>
    <div class="invoice overflow-auto">
        <div style="min-width: 10px">
            <header>
                <div class="row">
                    <div class="col">
                        <a target="_blank" href="https://lobianijs.com">
                            <img src="{{asset('asset/img/m.png') }}"   height="90px" width="90px" data-holder-rendered="true" />
                        </a>
                    </div>
                    <div class="col company-details">
                        <h2 class="name">
                            <a target="_blank" href="">
                                Service  De Maintenance
                            </a>
                        </h2>

                    </div>
                </div>
            </header>
            <main>
                <div class="row contacts">
                    <div class="col invoice-to">
                        <div class="text-gray-light"><strong>Pour:</strong> </div>
                        <h2 class="to">{{ fd.intervention.demandeIntervention.machine.libelle}}</h2>
                        <div class="address">Placeé à :{{ fd.intervention.demandeIntervention.machine.emplacement.libelle}}</div>

                    </div>

                    <div class="col invoice-details">
                        <h1 class="invoice-id">FICHE DE DEMONTAGE № :{{ fd.id }} </h1>
                        <div class="date"> Date déclaration de la panne {{ fd.intervention.demandeIntervention.date|date('d/m/Y ')}}</div>
                        <div class="date"> Date Début Intervention {{ fd.intervention.dateDebut|date('d/m/Y ')}}</div>
                        <div class="date"> Date Debut Démontage  {{fd.date|date('d/m/Y ')}}</div>
                        <div class="date"> Date Fin Démontage  {{fd.dateFin|date('d/m/Y ')}}</div>
                    </div>

                </div>
                <h2 class="piece"> Piéces de rechanges en entrée </h2>
                <table  width="50%" border="0" cellspacing="0" cellpadding="0">
                    <thead>
                    <tr>
                        <td>numéro</td>
                        <td class="text-left">PIECE</td>
                        <td class="text-right">QUANTITE</td>

                    </tr>
                    </thead>
                    <tbody>

                    {% for p in ppi %}
                        <tr>
                            <td class="no" width="1%"> {{ loop.index }}</td>
                            <td class="text-left" > {{p.pieceRechange.designation  }}</td>
                            <td class="total" width="2%">{{p.quantite  }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>

                    <tfoot>
                    </tfoot>
                </table>

                <div class="notices">
                    <div>Singnature</div>
                    <div class="notice">Technicien.</div>
                </div>
            </main>
            {% endblock %}
            <footer>
            </footer>
        </div>
        <!--DO NOT DELETE THIS div. IT is responsible for showing footer always at the bottom-->
        <div></div>
    </div>
</div>
